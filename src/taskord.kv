<MainScreen>:
    canvas.before:
        Color:
            rgba: get_color_from_hex("#2E2E2E")
        Rectangle:
            pos: root.pos
            size: root.size


<LicensePopupLayout>:
    BoxLayout:
        orientation: "vertical"
        padding: 4, 4
        spacing: 2
        BoxLayout:
            orientation: "vertical"
            TextInput:
                text: root.license_showing
        Button:
            text: "Close"
            size_hint_y: None
            height: self.texture_size[1] * 1.1
            on_release: root.close()

